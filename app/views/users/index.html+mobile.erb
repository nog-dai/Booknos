
<div class="p-user-index">

  <%= paginate @users %>

  <ul class="p-user-index-list">
    <% @users.each do |user| %>
      <li>
        <a href=<%= "/users/#{user.id}"%>>
          <%= gravatar_for user, size: 200 %>
          <p><%= user.name %></p>
        </a>
      </li>
    <% end %>
  </ul>

  <%= paginate @users %>

</div>