<header class="drawer-navbar" role="banner">
  <div class="drawer-container">
    <div class="drawer-navbar-header flex-row">
      <h2><%= link_to "Booknos", root_path %></h2>
      <button type="button" class="drawer-toggle drawer-hamburger">
        <span class="sr-only">toggle navigation</span>
        <span class="drawer-hamburger-icon"></span>
      </button>
    </div>
    <nav class="drawer-nav" role="navigation">
      <ul class="drawer-menu drawer-menu--right">
        <% if logged_in? %>
          <li class="drawer-menu-item"><%= link_to "Users", '#' %></li>
          <li class="drawer-menu-item"><%= link_to "Profile", current_user %></li>
          <li class="drawer-menu-item"><%= link_to "Settings", '#' %></li>
          <li class="drawer-menu-item"><%= link_to "Log out", logout_path, method: :delete %></li>
        <% else %>
          <li class="drawer-menu-item"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>