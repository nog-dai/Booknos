header {
  height: 40vh !important;
  padding-top: 3vh;
  background-color: rgb(203, 229, 250) !important;
  background-image: url("<%= asset_path('header.jpg') %>");
  background-size: cover;
  margin-bottom: 4vh;
  h2 {
    width: 90vw;
    margin: 0 auto 3vh;
    a {
      width: 100%;
      height: 100%;
      display: block;
      font-size: 7vh;
      font-family: serif;
      font-weight: bold;
      &:active, &:hover {
        text-decoration: none;
        color: black;
      }
    }
  }
  ul {
    width: 100%;
    list-style: none;
    li:first-child {
      border-left: 1px solid black;
    }
  }
  li {
    min-width: 120px;
    font-size: 1.5rem !important;
    font-weight: bold;
    padding: 0 1rem !important;
    border-right: 1px solid black;
  }
}
